<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      tools:context="com.sts.teacher.MainActivity"
    android:background="@color/common_google_signin_btn_text_dark_focused">

    <Button
        android:id="@+id/teacherButton"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/studentButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="Teacher"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />


    <Button
        android:id="@+id/studentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="178dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="Student"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_alignBottom="@+id/studentButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="82dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>
