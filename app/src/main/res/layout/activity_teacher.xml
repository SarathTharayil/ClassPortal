<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cpgradient"
    tools:context="com.sts.teacher.TeacherActivity">

    <Button
        android:id="@+id/notification"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="Notification"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="Enter Attendance"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="Add New Student"
        android:textColor="#000000"
        android:textSize="20dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbox"
        android:fontFamily="@font/kreon"
        android:onClick="fn"
        android:text="View Student details"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/kreon"
        android:gravity="center"
        android:text="Dashboard"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="50sp" />
</RelativeLayout>
